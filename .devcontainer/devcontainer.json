{
  "name": "Washing Machine Reservation System",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },

  "postCreateCommand": "bash .codespaces/setup.sh",
  
  "forwardPorts": [5000],
  "portsAttributes": {
    "5000": {
      "label": "Flask App - 세탁기 예약 시스템",
      "onAutoForward": "notify",
      "protocol": "http"
    }
  },
  
  "postStartCommand": "echo '✅ Codespace 준비 완료! 터미널에서 python app.py를 실행하세요.'"
}

